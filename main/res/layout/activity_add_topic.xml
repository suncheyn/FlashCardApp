<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addTopic"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/topicFinish"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="84dp"
        android:text="@string/create_topic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newTopic" />

    <EditText
        android:id="@+id/newTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:layout_marginBottom="136dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="@string/create_topic"
        android:inputType="text"
        android:text="Topic name goes here!"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/topicFinish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>